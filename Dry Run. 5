<!DOCTYPE html>
<html>
<head>
    <title>Reverse Loop Direction</title>
</head>
<body>

    
    <p>Enter a number (n): <input type="number" id="numInput" placeholder="Enter a number"></p>
    <button onclick="calculateSum()">Calculate Sum</button>
    <p id="output"></p>

    <script>
        function calculateSum() {
            let n = parseInt(document.getElementById("numInput").value); 
            let result = 0;  

            // Increasing loop
            for (let i = 0; i <= n; i++) {
                result += i;  
               
                // i = 0, True, result = 0
                // i = 1, True, result = 1
                // i = 2, True, result = 3
                // i = 3, True, result = 6
                // i = 4, True, result = 10
                // i = 5, False, Break
            }

            document.getElementById("output").innerText = "The result is: " + result;
        }
    </script>

</body>
</html>
