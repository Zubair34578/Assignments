<!DOCTYPE html>
<html>
<head>
   <title>Reverse a String</title>
</head>
<body>
<h1>Reverse a String</h1>
   <input type="text" id="stringInput" placeholder="Enter a string">
    <button onclick="reverseString()">Reverse String</button>
<h3>Reversed String:</h3>
    <p id="result"></p>

<script>
 function reverseString() {
  let input = document.getElementById('stringInput').value;
  let reversedString = '';
   
  for (let i = input.length - 1; i >= 0; i--) {
    reversedString += input[i]; 
    }
    document.getElementById('result').textContent = reversedString;
    }
    </script>

</body>
</html>
