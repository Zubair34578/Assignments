<!DOCTYPE html>
<html>
<head>
    <title>Find Maximum Number</title>
</head>
<body>
    <div id="output"></div>
    <script>
function findMaxNumber(numbers) {
let max = numbers[0]; 
for (let i = 1; i < numbers.length; i++) {
if (numbers[i] > max) { 
 max = numbers[i]; }
}
return max; 
}
let numbers = [8, 15, 6, 4, 27, 5]; 
let maxNumber = findMaxNumber(numbers); 
 document.getElementById("output").innerHTML = "The maximum number is: " + maxNumber;
</script>
</body>
</html>
